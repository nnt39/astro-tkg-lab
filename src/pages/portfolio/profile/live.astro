---
import Layout from "@/layouts/LayoutsPortfolio.astro";
import LiveList from "@/components/portfolio/profile/liveList.astro";
import PageHeading from "@/components/portfolio/common/PageHeading.astro";
import ScrollEgg from "@/components/portfolio/common/ScrollEgg.astro";
---

<Layout
  title="LIVE"
  description=""
  breadcrumbs={[
    { text: "ポートフォリオ", src: "/portfolio" },
    { text: "プロフィール", src: "/portfolio/profile" },
    { text: "参戦履歴・参戦予定", src: "/portfolio/profile/live" },
  ]}
>
  <main>
    <ScrollEgg />
    <section class="px-6 lg:px-[108px]">
      <div class="max-w-2lg mx-auto py-28 lg:py-40">
        <PageHeading title="参戦履歴・予定" titleEn="Live" />
        <div class="mt-10 lg:mt-18">
          <LiveList />
        </div>
      </div>
    </section>
  </main>
</Layout>
