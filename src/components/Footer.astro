---
interface Breadcrumb {
  src: string;
  text: string;
}
interface Props {
  breadcrumbs?: Breadcrumb[] | undefined;
}

const { breadcrumbs } = Astro.props;

import Breadcrumb from "@/components/Breadcrumb.astro";
---

<div class="bg-yellow-200 px-6 py-1 lg:px-[108px]">
  <div class="max-w-2lg mx-auto">
    <Breadcrumb breadcrumbs={breadcrumbs} />
  </div>
</div>
<footer class="bg-[#F29544] px-6 pt-10 pb-20 lg:pb-20 lg:px-[108px]">
  <div class="max-w-2lg mx-auto grid grid-cols-1 xl:items-center gap-y-8 lg:grid-cols-12">
    <div class="lg:col-start-1 lg:col-span-3">
      <a href="/portfolio" class="group flex gap-2">
        <img class="group-hover:scale-125 transition-transform duration-300"
          src="/image/common/tkg-icon.svg"
          alt=""
          width="30"
          height="30"
        />
        <span class="text-lg/[2] text-white transition-color duration-300 group-hover:text-brown">TKG Portfolio</span>
      </a>
    </div>
    <ul class="flex flex-col gap-2 justify-between items-end text-right lg:col-start-7 lg:col-span-6 xl:flex-row">
      <li class="relative w-fit px-[2px]">
        <a href="/portfolio/profile">
          <span class="text-white transition-color duration-300 hover:text-brown relative z-[1]">Tkg? - プロフィール</span>
        </a>
      </li>
      <li class="relative w-fit px-[2px]">
        <a href="/portfolio/service">
          <span class="text-white transition-color duration-300 hover:text-brown relative z-[1]">maKe! - サービスについて</span>
        </a>
      </li>
      <li class="relative w-fit px-[2px]">
        <a href="/portfolio/gallery">
          <span class="text-white transition-color duration-300 hover:text-brown relative z-[1]">Gallery! - つくったもの</span>
        </a>
      </li>
    </ul>
  </div>
</footer>
