---
interface Breadcrumb {
  src: string;
  text: string;
}
interface Props {
  breadcrumbs?: Breadcrumb[] | undefined;
}

const { breadcrumbs } = Astro.props;

import Breadcrumb from "@/components/Breadcrumb.astro";
---

<footer class="bg-primary px-6 pt-10 pb-20 lg:py-20 lg:px-[108px]">
  <div class="max-w-2lg mx-auto">
    <Breadcrumb breadcrumbs={breadcrumbs} />
    <div class="mt-6">
      <a href="/" class="group flex gap-1">
        <img class="group-hover:scale-125 transition-transform duration-300"
          src="/image/common/tkg-icon.svg"
          alt=""
          width="30"
          height="30"
        />
        <span class="text-lg/[2]">ホームページ制作のTKG</span>
      </a>
    </div>
  </div>
</footer>
