---
interface Breadcrumb {
  src: string;
  text: string;
}
interface Props {
  breadcrumbs?: Breadcrumb[] | undefined;
}

const menuItems = [
  { href: '/portfolio/profile', text_en: 'Tkg?', text_ja:'プロフィール' },
  { href: '/portfolio/service', text_en: 'sKill!', text_ja:'経験・スキル' },
  { href: '/portfolio/gallery', text_en: 'Gallery!', text_ja:'つくったもの' }
];

const { breadcrumbs } = Astro.props;
import Breadcrumb from "@/components/Breadcrumb.astro";
---
<footer>
<div class="bg-yellow-200 px-6 py-1 lg:px-[108px]">
  <div class="max-w-2lg mx-auto">
    <Breadcrumb breadcrumbs={breadcrumbs} />
  </div>
</div>
<div class="bg-[#F29544] px-6 pt-10 pb-20 lg:pb-20 lg:px-[108px]">
  <div class="max-w-2lg mx-auto grid grid-cols-1 xl:items-center gap-y-8 lg:grid-cols-12">
    <div class="lg:col-start-1 lg:col-span-3">
      <a href="/portfolio" class="group flex gap-2">
        <img class="group-hover:scale-125 transition-transform duration-300"
          src="/image/common/tkg-icon.svg"
          alt=""
          width="30"
          height="30"
        />
        <span class="text-lg/[2] text-white font-en transition-color duration-300 group-hover:text-brown">TKG Portfolio</span>
      </a>
    </div>
    <ul class="flex flex-col gap-2 justify-between items-end text-right lg:col-span-6 lg:col-start-7 xl:flex-row">
      {menuItems.map(item => (
        <li class="relative w-fit px-[2px]">
          <a class="group flex gap-2" href={item.href}>
            <img class=" opacity-0 transition duration-300 group-hover:opacity-100 w-6" src="/image/portfolio/common/egg.svg" alt="">
            <p class="text-white transition-color duration-300 group-hover:text-brown relative z-[1]"><span class="font-en">{item.text_en}</span> - <span class="text-sm">{item.text_ja}</span></p>
          </a>
        </li>
      ))}
    </ul>
  </div>
</footer>
