---
interface Breadcrumb {
  src: string;
  text: string;
}
interface Props {
  breadcrumbs?: Breadcrumb[] | undefined;
}

const { breadcrumbs } = Astro.props;

import Breadcrumb from "@/components/Breadcrumb.astro";
---

<footer class="bg-[#F29544] px-6 pt-10 pb-20 lg:py-20 lg:px-[108px]">
  <div class="max-w-2lg mx-auto grid grid-cols-1 items-start gap-y-8 lg:grid-cols-12">
    <div class="col-span-1 lg:col-span-6">
      <Breadcrumb breadcrumbs={breadcrumbs} />
    </div>
    <div class="lg:row-start-2 lg:col-start-1 lg:col-span-3">
      <a href="/" class="group flex gap-2">
        <img class="group-hover:scale-125 transition-transform duration-300"
          src="/image/common/tkg-icon.svg"
          alt=""
          width="30"
          height="30"
        />
        <span class="text-lg/[2] text-white">ホームページ制作のTKG</span>
      </a>
    </div>
    <ul class="flex flex-col gap-2 items-end justify-between text-right lg:row-start-2 lg:col-start-7 lg:col-span-6 xl:flex-row">
      <li class="group relative w-fit px-[2px]">
        <a href="/portfolio/profile">
          <span class="absolute w-full h-full bg-[#FFFCEC] left-0 top-0 opacity-100 transition-transform duration-300 origin-left scale-x-0 group-hover:scale-x-100"></span>
          <span class="text-white group-hover:text-[#F29544] relative z-[1]">Tkg? - プロフィール</span>
        </a>
      </li>
      <li class="group relative w-fit px-[2px]">
        <a href="/portfolio/service">
          <span class="absolute w-full h-full bg-[#FFFCEC] left-0 top-0 opacity-100 transition-transform duration-300 origin-left scale-x-0 group-hover:scale-x-100"></span>
          <span class="text-white group-hover:text-[#F29544] relative z-[1]">maKe! - サービスについて</span>
        </a>
      </li>
      <li class="group relative w-fit px-[2px]">
        <a href="/portfolio/gallery">
          <span class="absolute w-full h-full bg-[#FFFCEC] left-0 top-0 opacity-100 transition-transform duration-300 origin-left scale-x-0 group-hover:scale-x-100"></span>
          <span class="text-white group-hover:text-[#F29544] relative z-[1]">Gallery! - つくったもの</span>
        </a>
      </li>
    </ul>
  </div>
</footer>
